<div class = "container">
<h5><span class="bg-light text-dark">新規会員登録</h5>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

<table>
  <div class="field">
    <tr>
      <td>
    <%= f.label :名前 %>
      </td>
      <td>
    (姓)
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name",placeholder:"令和" %>
    (名)
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",placeholder:"道子" %>
      </td>
    </tr>
  </div>

  <div class="field">
    <tr>
      <td>
    <%= f.label :フリガナ %>
      </td>
      <td>
    (セイ)
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana",placeholder:"レイワ" %>
    (メイ)
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana",placeholder:"ミチコ" %>
    </td>
  </tr>
  </div>

  <div class="field">
    <tr>
      <td>
    <%= f.label :メールアドレス %>
      </td>
      <td>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </td>
    </tr>
  </div>

  <div class="field">
    <tr>
      <td>
    <%= f.label :郵便番号 %>(ハイフンなし)
      </td>
      <td>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code",placeholder:"0000000" %>
      </td>
    </tr>
  </div>
  
  <div class="field">
    <tr>
      <td>
    <%= f.label :住所 %>
      </td>
      <td>
    <%= f.text_field :address, autofocus: true, autocomplete: "address",placeholder:"東京都渋谷区代々木神園町0-0", style: "width:100%" %>
      </td>
    </tr>
  </div>
  
  <div class="field">
    <tr>
      <td>
    <%= f.label :電話番号 %>(ハイフンなし)
      </td>
      <td>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number",placeholder:"0000000000" %>
      </td>
    </tr>
  </div>
  

  <div class="field">
    <tr>
      <td>
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    (<%= @minimum_password_length %>文字以上)
    <% end %>
      </td>
      <td>
    <%= f.password_field :password, autocomplete: "new-password" %>
      </td>
    </tr>
  </div>

  <div class="field">
    <tr>
      <td>
    <%= f.label :パスワード %>(確認用)
      </td>
      <td>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </td>
    </tr>
  </div>
</table>

  <div class="actions">
    <%= f.submit "新規登録",class:"btn btn-success" %>
  </div>
<% end %>

<!--<%= render "public/shared/links" %>-->


<h5><span class="bg-light text-dark">既に登録済みの方</h5>
<%=link_to "こちら",new_customer_session_path %>　からログインしてください。
  
</div>
  