<div class="container">
<div class="row">
<div class="col-md-3">
<%= render 'genres', genres: @genres %>
</div>

<div class="col-md-8 offset-md-1">
<h2>商品一覧</h2>
<h3>(全<%=@count %>件)</h3>

<div class = "row">
<% @items.each do |item| %>
<div class = "col-3">

<%= image_tag item.get_item_image(100,200) %><br>
<%=link_to item_path(item.id) do %>
<%=item.name %>
<% end %><br>
¥<%=item.add_tax_price.to_s(:delimited) %>

</div>
<% end %>
</div>

<div class ="d-flex justify-content-center">
<%= paginate @items %>
</div>

</div>
</div>
</div>    

