<h5 class="font-weight-bold bg-light text-dark">注文情報入力</h5>

<%= form_with model:@order,url:orders_path,method: :post do |f| %>
<h6>支払方法</h6>
    <div>
        <%= f.radio_button :pay_method, :credit_card, checked: true %>
        <%= f.label :pay_method, "クレジットカード", {value: :credit_card} %><br>
        <%= f.radio_button :pay_method, :transfer %>
        <%= f.label :pay_method, "銀行振込", {value: :transfer} %>
    </div>
    
<h6>お届け先</h6>
    <div>
        <%= f.radio_button :full_customer_address, :full_customer_address %>
        <%= f.label :address,"ご自身の住所" %>
    </div>
    <div>
        <%=@customer.full_customer_address %>
    </div>
    
    <div>
        <%= f.radio_button :delivery_id, :full_address %>
        <%= f.label :address,"登録済住所から選択" %>
    </div>
    <div>
    <%=f.collection_select(:delivery_id, @deliveries, :id, :full_address) %>
    <%=f.select :delivery_id, options_from_collection_for_select(Delivery.all,:id, :full_address) %>
    </div>

    <div>
        <%= f.radio_button :delivery_id, :delivery_id %>
        <%= f.label :address,"新しいお届け先" %>
    </div>
    <div class="field">
        <%= f.label :郵便番号 %>
        <%= f.text_field :postal_code, placeholder:"0000000" %>
    </div>
  
    <div class="field">
        <%= f.label :住所 %>
        <%= f.text_field :address,placeholder:"東京都渋谷区代々木神園町0-0" %>
    </div>
  
    <div class="field">
        <%= f.label :宛名 %>
        <%= f.text_field :name, placeholder:"令和道子"  %>
    </div>
<% end %>

<%=link_to '確認画面に進む' ,orders_log_path,class:"btn btn-primary" %>
