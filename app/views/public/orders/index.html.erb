<h5 class="font-weight-bold bg-light text-dark">注文履歴一覧</h5>

<table border="1" style="border-collapse: collapse">
    <thead class="bg-light">
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
    </thead>

    <tbody>

        <tr>
          <% @orders.each do |f| %>
          <td>
            <%=f.create_at %>
          </td>
          <td>
            〒<%=f.postal_code %><br>
            <%=f.address %><br>
            <%=f.name %>
          </td>
          <td>
            <%=f.item.name %>
          </td>
          <td>
            <%=f.total_price %>円
          </td>
          <td>
            <%=f.status %>
          </td>
          <td>
            <%= link_to '表示する',order_path(f.id),class:"btn btn-primary" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>