<div class="container">
<h5><span class="bg-light text-dark">配送先編集</span></h5>
<%= form_with model: @delivery,url: delivery_path,local:true do |f| %>

<table>
  <tr>
  <div class="field">
    <td>
    <%= f.label :郵便番号 %>(ハイフンなし)
    </td>
    <td>
    <%= f.text_field :postal_code, placeholder:"0000000" %>
    </td>
  </div>
  </tr>
  <tr>
  <div class="field">
    <td>
    <%= f.label :住所 %>
    </td>
    <td>
    <%= f.text_field :address,placeholder:"東京都渋谷区代々木神園町0-0", style: "width:250%" %>
    </td>
  </div>
  </tr>
  <tr>
  <div class="field">
    <td>
    <%= f.label :宛名 %>
    </td>
    <td>
    <%= f.text_field :name, placeholder:"令和道子"  %>
    </td>
  </div>
  </tr>
  </table>

<div align="right">
  <%= f.submit '変更内容を保存',class:"btn btn-success" %>
</div>


<% end %>

</div>