<h2>注文履歴一覧</h2>

<table>
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>

    <tbody>

        <tr>
            <% @orders.each do |order| %>
          <td>
            <%=link_to admin_orders_show_path(order.id) do %>
            <%=order.created_at %>
            <% end %>
          </td>
          <td>
            <%=order.name %>
          </td>
          <td>
            <%=order.item_amount %>
          </td>
          <td>
            <%=order.status %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>





<%= paginate @orders %>