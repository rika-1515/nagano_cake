<h2>ジャンル一覧・追加</h2>
<%= form_with model: @genre do |f| %>
  <h4>ジャンル名</h4>
  <%= f.text_field :title %>

  <%= f.submit '新規登録' %>
<% end %>

<table>
    <thead>
      <tr>
        <th></th>
        <th>ジャンル</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td>
          <%=link_to edit_admin_genres_path(genre.id) %>
          </td>
          <td>
          <%=link_to admin_genres(genre.id) do %>
            <%=genre.title %>
          <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>