
<div class="container">  
  <div class="row">

<h5 class="font-weight-bold bg-light text-dark">ジャンル一覧・追加</h5><br>
<%= form_with model: @genre,url:admin_genres_path do |f| %>
  <div class="font-weight-bold bg-light text-dark">ジャンル名</div>
  <%=f.text_field:name,autofocus:true,placeholder:"ジャンル名" %>


  <%= f.submit '新規登録',class:"btn btn-success" do %>
  <% end %>


<% end %>

<table class="table">
    <thead class="table-light">
      <tr>
        <th>ジャンル</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td>
            <%=genre.name %>
          </td>
          <td>
            <%=link_to "編集する", edit_admin_genre_path(genre.id),class:"btn btn-success" %>
            
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
    </div> 
</div>