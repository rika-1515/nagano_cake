
<div class="container">  
  <h5><span class="bg-light text-dark">ジャンル一覧・追加</span></h5>
  <table>
<%= form_with model: @genre,url:admin_genres_path do |f| %>
  <tr>
    <td>
  <div class="font-weight-bold text-dark">ジャンル名</div>
    </td>
    <td>
  <%=f.text_field:name,autofocus:true,placeholder:"ジャンル名" %>
    </td>
    <td>
  <%= f.submit '新規登録',class:"btn btn-success" do %>
    </td>
  </tr>
  <% end %>
  </table>
<% end %>

<div class = "row">
  <div class = "col-4">
<table class="table">
    <thead class="table-light">
      <tr>
        <th>ジャンル</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td>
            <%=genre.name %>
          </td>
          <td>
            <%=link_to "編集する", edit_admin_genre_path(genre.id),class:"btn btn-success" %>
            
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
        </div>
        <div class = "col-8">
        </div>
      </div>
    
</div>