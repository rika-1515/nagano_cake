<div class="container">  


<h5><span class="bg-light text-dark"><%=@customer.last_name %><%=@customer.first_name %>さんの会員詳細</span></h5>

<table>
    
      <tr>
        <td>会員ID</td>
        <td>
            <%=@customer.id %>
        </td>
    　</tr>
    
    　<tr>
    　  <td>氏名</td>  
        <td>
            <%=@customer.last_name %>　<%=@customer.first_name %>
        </td>
      </tr>
      
    　<tr>
    　  <td>フリガナ</td>  
        <td>
            <%=@customer.last_name_kana %>　<%=@customer.first_name_kana %>
        </td>
      </tr>
      
      <tr>
          <td>郵便番号</td>
          <td>
            <%=@customer.postal_code %>
          </td>
      </tr>
      
      <tr>
          <td>住所</td>
          <td>
            <%=@customer.address %>
          </td>
      </tr>
      
      <tr>
          <td>電話番号</td>
          <td>
            <%=@customer.telephone_number %>
          </td>
      </tr>
      
      <tr>
          <td>メールアドレス</td>
          <td>
            <%=@customer.email %>
          </td>
      </tr>
      
        <tr>
          <td>退会ステータス</td>
          <td>
            <% if @customer.is_active? %>
            <span class="text-success font-weight-bold">有効</span>
            <% else %>
            <span class="text-muted font-weight-bold">退会</span>
            <% end %>
          </td>
        </tr>
      
    
  </table>
  
  <%=link_to "編集する", edit_admin_customer_path(@customer.id),class:"btn btn-success" %>
  
  
  
  
</div>
  
  

