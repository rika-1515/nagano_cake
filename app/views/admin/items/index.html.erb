

<div class="container">  
  <div class="row">
  <h5 class="font-weight-bold bg-light text-dark">商品一覧</h5>
  <div class="right">
    <%=link_to new_admin_item_path do %>
    <i class="fas fa-plus-circle"></i>
    <% end %>
  </div>

<table class="table">
    <thead class="table-light">
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>販売ステータス</th>
      </tr>
    </thead>

    <tbody class="table-borderless">

        <tr>
          <% @items.each do |item| %>
          <td>
            <%=item.id %>
          </td>
          <td>
            <%=link_to admin_item_path(item.id),class:"text-reset" do %>
            <%=item.name %>
            <% end %>
          </td>
          <td>
            <%=item.price.to_s(:delimited) %>
          </td>
          <td>
            <%=item.genre.name %>
          </td>
          <td>
            <% if item.is_active? %>
            <p class="text-success font-weight-bold">販売中</p>
            <% else %>
            <p class="text-muted font-weight-bold">販売停止中</p>
            <% end %>

          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  </div> 
</div>
  

  <%= paginate @items %>

  