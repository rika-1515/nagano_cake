<div class="container">
  <h5><span class="bg-light text-dark">商品詳細</span></h5>
  
  <div class="row">
    <div class = "col-4">
<%= image_tag @item.get_item_image(200,300) %>
    </div>
    <div class = "col-8">
<table>
    
      <tr>
        <td>商品名</td>
        <td>
            <%=@item.name %>
        </td>
    　</tr>
    
    　<tr>
    　  <td>商品説明</td>  
        <td>
            <%=@item.introduction %>
        </td>
      </tr>
      <tr>
          <td>ジャンル</td>
          <td>
            <%=@item.genre.name %>
          </td>
      </tr>
      
        <tr>
          <td>
            税込価格<br/>
            (税抜価格)
          </td>
          <td>
            <%=@item.add_tax_price.to_s(:delimited) %>
            (<%=@item.price.to_s(:delimited) %>)円
          </td>
        </tr>
          
        <tr>
          <td>販売ステータス</td>
          <td>
            <% if @item.is_active? %>
            <span class="text-success font-weight-bold">販売中</span>
            <% else %>
            <span class="text-muted font-weight-bold">販売停止中</span>
            <% end %>
          </td>
        </tr>
      
    
  </table>
  
  <div>
  <%=link_to "編集する", edit_admin_item_path(@item.id),class:"btn btn-success" %>
  </div>
    </div>
    </div>
  </div>
  
  
  
  
  